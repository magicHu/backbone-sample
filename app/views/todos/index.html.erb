<div id="todoapp">
  <h3>Todos</h3>

  <input type="text" id="new-todo" placeholder="enter your task name" />

  <ul id="todos">
  </ul>

  <div>
    <span class="label">2 items left</span>
    <a class="btn pull-right">clear 1 complete item</a>
  </div>
</div>

<script type="text/template" id="todo-template">
  <li class="todo">
  <div>
    <input type="checkbox" /><span class="title"><%%= title %></span>
    <a href="#" class="close"><i class="icon-remove-sign pull-right" /></a>
  </div>
  </li>
</script>